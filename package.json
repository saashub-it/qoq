{
  "name": "@saashub/qoq",
  "private": true,
  "bugs": {
    "url": "https://github.com/saashub-it/qoq/issues"
  },
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "postinstall": "qoq --warmup",
    "husky:pre-push": "run-s build check:engine test qoq:check",
    "publish:full": "run-s husky:pre-push publish:lerna",
    "publish:lerna": "lerna publish --no-private --force-publish && npm run config-inspector:clean",
    "check:engine": "check-engine",
    "qoq:check": "qoq --check",
    "qoq:fix": "qoq --fix",
    "sort:packages:json": "npx -y sort-package-json 'package.json' 'packages/*/package.json'",
    "pre:test": "npm run config-inspector",
    "config-inspector": "node ./scripts/config-inspector.mjs",
    "config-inspector:clean": "rimraf -g ./packages/eslint-v9-*/stats/",
    "test": "npm run pre:test && vitest run",
    "test:execute": "vitest run",
    "test:coverage": "npm run pre:test && npm run test -- --coverage"
  },
  "devDependencies": {
    "@saashub/check-engine": "latest",
    "@saashub/qoq-cli": "latest",
    "@saashub/qoq-eslint-v9-ts": "latest",
    "@saashub/qoq-eslint-v9-ts-jest": "latest",
    "@saashub/qoq-jscpd": "latest",
    "@saashub/qoq-knip": "latest",
    "@saashub/qoq-prettier-with-json-sort": "latest",
    "@types/node": "^22",
    "@vitest/coverage-v8": "3.2.4",
    "lerna": "9.0.0",
    "npm-run-all": "4.1.5",
    "rimraf": "6.0.1",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=20.9.0"
  }
}
