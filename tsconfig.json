{
  "compilerOptions": {
    "module": "NodeNext",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "lib": ["es6"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
